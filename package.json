{
  "name": "PopTerm",
  "version": "1.0.0",
  "description": "A minimal popup terminal",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --config webpack.config.js --watch",
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "package": "electron-builder build --mac --win --linux"
  },
  "keywords": [
    "terminal",
    "electron",
    "typescript",
    "minimal",
    "popup"
  ],
  "author": "Clinton Jules",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.21",
    "@types/styled-components": "^5.1.34",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.8",
    "typescript": "^5.4.2"
  },
  "build": {
    "appId": "com.example.popterm",
    "productName": "PopTerm",
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    }
  }
}
